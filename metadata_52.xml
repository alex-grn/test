	</MODULES>
	<GROUPS_MENU name="Группы меню">
		<MENU id="SocialReg" name="Реестр получателей мер социальной поддержки">
			<MENU name="Сервис">
				<MI name="Руководство Пользователя" actionlist="HelpUsers"/>
				<MI name="Выход" actionlist="Exit"/>
			</MENU>
			<MENU name="Реестры">
				<MI name="Загрузка реестров" formlist="BenefitsPackets"/>
				<MENU name="Реестры">
					<MI name="Граждане, подвергшиеся воздействию радиации" formlist="Benefit11"/>
				</MENU>
			</MENU>
			<MENU name="Участники процесса">
				<MI name="Отправители пакетов" formlist="Senders"/>

			</MENU>
			<MENU name="Справочники">
				<MENU name="Документы">
					<MI name="Документ, удостоверяющий личность" formlist="Persondocumentdir"/>
				</MENU>
					<MI name="Категории получателей" formlist="RecipientsCategoriesdir"/>
